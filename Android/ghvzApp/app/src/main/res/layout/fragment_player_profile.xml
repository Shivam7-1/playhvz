<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="@dimen/screen_margin_horizontal">

  <ImageView
    android:id="@+id/player_avatar"
    android:layout_width="@dimen/avatar_large"
    android:layout_height="@dimen/avatar_large"
    android:importantForAccessibility="no"
    android:src="@drawable/ic_person"
    android:tint="@color/colorPrimaryDark"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.emoji.widget.EmojiTextView
    android:id="@+id/player_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:textColor="@color/app_primary_text"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="@id/player_avatar"
    app:layout_constraintStart_toEndOf="@id/player_avatar"
    app:layout_constraintTop_toTopOf="@id/player_avatar"
    tools:ignore="RtlSymmetry" />

</android.support.constraint.ConstraintLayout>